    "test:products": "npx playwright test tests/products.spec.ts",
    "test:products:report": "npx playwright test tests/products.spec.ts --config=playwright.config.auto-report.ts",
    "test:search": "npx playwright test tests/search.spec.ts",
    "test:search:report": "npx playwright test tests/search.spec.ts --config=playwright.config.auto-report.ts",
    "test:chromium": "npx playwright test --project=chromium",
