    "test:prod": "TEST_ENV=prod npx playwright test",
    "test:regression": "npx playwright test tests/",
    "test:examples": "npx playwright test examples/",
    "test:fixtures-demo": "npx playwright test examples/advanced-fixtures-examples.spec.ts",
    "test:adblocker-demo": "npx playwright test examples/example-with-adblocker.spec.ts",
